<% content_for :view_specific_css do %>
<style src="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css">

</style>
<% end %>

<p id="notice"><%= notice %></p>

<h1>Fares</h1>

<table id="example">
  <thead>
    <tr>
      <th>Cost</th>
      <th colspan="3"></th>
      <th style="display:none"></th>
      <th style="display:none"></th>
    </tr>
  </thead>

  <tbody>
    <% @fares.each do |fare| %>
      <tr>
        <td> <%fare.images.each do|img|%>
               <%= image_tag url_for(img), size: "100x100" %>
               <%end%>
               </td>
        <td><%= fare.cost %></td>
        <td><%= link_to 'Show', fare %></td>
        <td><%= link_to 'Edit', edit_fare_path(fare) %></td>
        <td><%= link_to 'Destroy', fare, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Fare', new_fare_path %>
<% content_for :javascript_includes do %>
<script type="text/javascript">

$(document).ready(function() {
    $('#example').DataTable( {
        columns: [
          { "orderable": false},

          null,
          { "orderable": false},
          { "orderable": false},
          { "orderable": false}
        ]
    } );
} );
</script>
<%end%>
